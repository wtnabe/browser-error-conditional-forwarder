{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType":  "module"
  },
  "plugins": ["flowtype"],
  "extends": "eslint:recommended",
  "globals": {
    "console": true
  },
  "rules": {
    "no-var": "error",
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "camelcase": "error"
  }
}
